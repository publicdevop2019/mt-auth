{
  "name": "mt-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4300 --host 0.0.0.0",
    "build": "ng build --prod",
    "build:prod": "ng build --configuration production",
    "package": "npm run build:prod && npm run update:analytics && npm run update:version && npm run update:timestamp && npm run cleanup",
    "update:analytics": "sed -i.bak 's#<!-- analytics -->#<script async src=\"https://www\\.googletagmanager\\.com/gtag/js?id=G-7VD006ERKY\"><\\/script> <script> window\\.dataLayer = window\\.dataLayer || []; function gtag(){dataLayer\\.push(arguments);} gtag(\"js\", new Date()); gtag(\"config\", \"G-7VD006ERKY\"); <\\/script>#g' ./dist/index.html",
    "update:version": "sed -i.bak \"s/version/$(npm pkg get version)/g\" ./dist/index.html",
    "update:timestamp": "sed -i.bak \"s/timestamp/$(date -u)/g\" ./dist/index.html",
    "cleanup": "rm ./dist/index.html.bak",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^10.2.0",
    "@angular/cdk": "^10.2.5",
    "@angular/common": "~10.2.0",
    "@angular/compiler": "~10.2.0",
    "@angular/core": "~10.2.0",
    "@angular/forms": "~10.2.0",
    "@angular/material": "^10.2.5",
    "@angular/platform-browser": "~10.2.0",
    "@angular/platform-browser-dynamic": "~10.2.0",
    "@angular/router": "~10.2.0",
    "@ngx-translate/core": "^12.1.2",
    "@ngx-translate/http-loader": "^4.0.0",
    "luxon": "^2.3.1",
    "mt-form-builder": "1.0.4",
    "rxjs": "~6.6.3",
    "tslib": "^2.0.0",
    "uuid": "^3.4.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.0",
    "@angular/cli": "~10.2.0",
    "@angular/compiler-cli": "~10.2.0",
    "@angular/language-service": "~10.2.0",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/luxon": "^2.3.0",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~4.0.5"
  },
  "engines": {
    "npm": ">7.20"
  }
}
